#include <iostream>
using namespace std;
int main()
{
    int r,y,g;//r为红灯，y为黄灯，g为绿灯
    cin>>r>>y>>g;
    int n;//n个路口
    cin>>n;
    int s=0;//统计时间
    for(int i=0;i<n;i++)
    {
        int x,y;
        cin>>x>>y;
        if(x==0) s=s+y;
        else if(x==1) s=s+y;
        else if(x==2) s=s+y+r;
        else continue;
    }
    cout<<s;
    return 0;
}
