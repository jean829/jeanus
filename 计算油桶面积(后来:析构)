#include <iostream>
#include<iomanip>
using namespace std;
double PI=3.1415926;
class cylinder
{
public:
    double getvolumn();
    double getarea();
    cylinder(double h1,double r1);
    ~cylinder();
private:
    double h,r;
};
cylinder::cylinder(double h1,double r1)
{
    h=h1;
    r=r1;
    cout<<"构造函数被调用"<<endl;
}
double cylinder::getvolumn()
{
    return PI*r*r*h;
}
double cylinder::getarea()
{
    return PI*r*r*2+PI*r*2*h;
}
cylinder::~cylinder()
{
    cout<<"析构函数被调用"<<endl;
}
int main()

{

    double d,h;

    cin>>d>>h;

    cylinder can(h,d/2);

    cout<<fixed<<setprecision(6);

    cout<<"油桶的容积是"<<can.getvolumn()<<" "<<endl;

    cout<<"铁皮的面积是"<<can.getarea()<<endl;

}
